<br>
<div class="container">
  {{!-- ROW 1 --}}
  <div class="row">
    <div id="image-container" class="col-sm-8 offset-2">
      <img src="/assets/images/frontgif.gif" class="rounded" alt="Responsive image" width="720" height="540">
    </div>
  </div>

  {{!-- ROW 2 --}}
  <div class="row">
    <div class="col-sm-8 offset-2">
      <form class="needs-validation mb-4" action="/game" method="POST">
        {{!-- user input name to start the game --}}
        <div class="form-group">
          <label id="enter-name" for="userName-text">Enter your name before playing!</label>
          <input type="text" id="userName-text" class="form-control" name="name" aria-describedby="userName-text"
            placeholder="Name" required>
          </input>
        </div>
        {{!-- Start Button --}}
        <input type="submit" id="button" value="Start"></input>
        <canvas id="myCanvas" width="500" height="500"></canvas>
      </form>
    </div>
  </div>

  {{!-- ROW 3 --}}
  <div class="row">
    <div id="buttons-div" class="col-sm-8 offset-2">
      {{!-- Leaderboard Button --}}
      <div class="button_cont">
        <a class="example_e" href="/leaderboard" rel="nofollow noopener">Leaderboard</a>
      </div>
    </div>
  </div><br>

  {{!-- ROW 4 --}}
  <div class="row">
    <div class="col-sm-8 offset-2">
      <h2 align="center" id="directions-div">ARROWS to move, SPACE to jump. Collect coins as fast as you can!</h2>
    </div>
  </div>

</div>

<script src="/assets/js/index.js"></script>