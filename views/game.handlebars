<body>
  <br>
  <h1>Good Luck, {{dataValue.name}}!</h1>
  <br>
  <div class="container-fluid">
    <div class="row" id="gameStat">
      {{!-- Status Display --}}
      <div class="col">
        <h2>Coin Collected: <span id="coinCollected">0</span>/26</h2>
      </div>

      <div class="col">
        <h2>Live Remaining: <span id="live">3</span></h2>
      </div>

      <div class="col">
        <h2>Monsters Killed: <span id="monsterKilled">0</span>/26</h2>
      </div>

      <div class="col">
        <h2>Your Time is: <span id="time">0:00</span></h2>
        <input type="hidden" id="user" value="{{dataValue.name}}" />
      </div>
    </div>

    {{!-- Game area --}}
    <div class="row">
      <div class="col-md-auto">
        <div id="GameCanvas"></div>
      </div>
      <div class="col-3">
        <h1 align="center">Top 5!</h1>
        <table class="table table-dark">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Name</th>
              <th scope="col"># of Killed</th>
              <th scope="col">Coin</th>
              <th scope="col">Time</th>
            </tr>
          </thead>
          <tbody>


          </tbody>
        </table>
      </div>

    </div>

  </div>

  {{!-- Game instruction --}}
  <div id="instructions">
    <b>LEFT/RIGHT</b> to move, <b>SPACE</b> to jump, collect gold and jump on monsters.
  </div>

  <script src="//cdn.jsdelivr.net/npm/phaser@3.18.1/dist/phaser.js"></script>
  <script src="/assets/js/fpsmeter.min.js"></script>
  <script src="/assets/js/platformer.js"></script>

</body>